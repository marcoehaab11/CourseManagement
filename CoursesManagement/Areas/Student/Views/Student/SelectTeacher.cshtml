@model StudentVM

@{
    ViewData["Title"] = "Select Teacher";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-action="AddCourseWithTeacher">
      
                <div class="mb-3 text-center">
                    @if (Model.TeacherList.Count() == 0)
                    {
                        <h5>No Teacher Available Now in This Course</h5>
                        <div class="d-flex justify-content-center">
                            <a href="/student/student/index" class="btn btn-secondary">Go Back</a>
                        </div>
                    }
                    else
                    {
                        <label for="TeacherId" class="form-label">Choose a Teacher</label>
                        <select asp-for="TeacherId" asp-items="Model.TeacherList" class="form-control">
                            <option disabled selected> ---Select Item---</option>
                            

                        </select>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    }
                </div>
                </form>
            </>
        </div>
    </div>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial">

}
