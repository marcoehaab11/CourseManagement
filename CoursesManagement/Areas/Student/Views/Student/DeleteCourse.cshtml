@model StudentVM
@{
    ViewData["Title"] = "Delete Course";
}
<form method="post">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Id" hidden>Id : @Model.Id</label>
            </div>
           
            <div class="form-group">
                <label asp-for="CourseId">Course :</label>
                <select disabled asp-for="CourseId" asp-items="Model.CourseList" class="form-control">
                    <option disabled selected> ---Select Item---</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TeacherId">Teacher :</label>
                <select disabled asp-for="TeacherId" asp-items="Model.TeacherList" class="form-control">
                    <option disabled selected> ---Select Item---</option>
                </select>
            </div>
                <div class="form-group " style="margin-top: 1rem;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                <a href="/student/student/index/" class="btn btn-secondary">Go Back</a>

                </div>
            
        </div>
    </div>
</form>
