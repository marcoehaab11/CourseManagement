@model StudentVM

@{
    ViewBag.Title = "Add New Course";
}


    <div class="container mt-5">
       

        <div class="row justify-content-center">
            <div class="col-md-6">
            
                <form method="post" asp-action="SelectTeacher" asp-controller="Student" asp-area="Student">
                    <div class="mb-3">
                        <label for="CourseId" class="form-label">Choose a Course</label>

                        <select asp-for="CourseId" asp-items="Model.CourseList" class="form-control">
                            <option disabled selected> ---Select Course---</option>

                        </select>
                    </div>

                  
                      <div class="form-group " style="margin-top: 1rem;">
                    <button type="submit" class="btn btn-primary">Next</button>
                    <a href="/student/student/index" class="btn btn-secondary">Go Back</a>

                </div>
                </form>
           
            
        
            </div>
        </div>
    </div>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial">

}

  