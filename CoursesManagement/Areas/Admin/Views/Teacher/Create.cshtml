@model TeacherVM
@{
    ViewBag.PageTitle = "Teacher Managment";
    ViewBag.CardTitle = "Add New Teacher";
}
<form method="post" >
    <div class="row">
        <div class="col-md-4">


            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CourseId"></label>
                <select asp-for="CourseId" asp-items="Model.CourseList" class="form-control">
                    <option disabled selected> ---Select Item---</option>
                    <option value="@null" > Without Course</option>

                </select>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <button href="/admin/teacher/index" class="btn btn-secondary">Back to List</button>

            
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial">

}
