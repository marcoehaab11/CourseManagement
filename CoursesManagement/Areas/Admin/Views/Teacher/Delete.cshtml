
@model TeacherVM
@{
    ViewBag.PageTitle = "Teacher Managment";
    ViewBag.CardTitle = "Delete Teacher";

    Layout = "~/Views/Shared/_Dashboard.cshtml";


}
<form method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
        <label asp-for="Id">Id : @Model.Id</label>
    </div>
            <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CourseId"></label>
        <select disabled asp-for="CourseId" asp-items="Model.CourseList" class="form-control">
            <option disabled selected> ---Select Item---</option>
            @if (Model.CourseId == null)
            {
                <option value="CourseId" selected>Without Course</option>

            }
            else
            {
                <option value="@null"> Without Course</option>

            }

        </select>
                <div class="form-group " style="margin-top: 1rem;">
        <button type="submit" class="btn btn-danger">Delete</button>
                    <button href="/admin/teacher/index" class="btn btn-secondary">Back to List</button>

    </div>
            </div>
        </div>
</form>


