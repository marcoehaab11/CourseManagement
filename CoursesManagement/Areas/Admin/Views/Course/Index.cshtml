
@{
    ViewBag.PageTitle = "Courses Managment";
    ViewBag.CardTitle="All Courses";
}

@model IEnumerable<Course>



<div style="padding-bottom: 20px;">
    <a href="/admin/course/create" class="btn btn-primary">Create New Category </a>

</div>
<div>


    <table class="table table-hover">
        <thead class="text-bold">
            <tr>
                <td>Name</td>
                <td>Description</td>

            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>
                      <a href="/admin/course/edit/@item.Id"  class="btn btn-success">Edit</a>
                      <a href="/admin/course/delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>


            </tr>
        }
    </table>
</div>
