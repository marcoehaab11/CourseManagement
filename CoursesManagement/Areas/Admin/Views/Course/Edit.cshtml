@model Course
@{
    ViewBag.PageTitle = "Course Managment";
    ViewBag.CardTitle = "Edit Course";
}
<form method="post">
    <div class="row">
        <div class="col-md-4">


            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" />@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Edit</button>

                <a href="/admin/course/index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial">

}
